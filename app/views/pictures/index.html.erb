<p id="notice"><%= notice %></p>

<h1>Feeds</h1>

<table class="container-fluid">
  <thead>
    <tr>
      <th>投稿一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class="row">
        <td class="col-md-4"><%= picture.content %></td>
        <td class="col-md-4"><%= picture.user.name %></td>
        <td class="col-md-1"><%= image_tag picture.image.url %></td>
        <% if picture.user_id == current_user.id %>
          <td class="col-md-1"><%= link_to 'Show', picture %></td>
          <td class="col-md-1"><%= link_to 'Edit', edit_picture_path(picture.id) %></td>
          <td class="col-md-1"><%= link_to 'Destroy', picture_path(picture.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_picture_path %>
